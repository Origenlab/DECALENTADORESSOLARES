---
interface Props {
  href?: string;
  type?: "button" | "submit" | "reset";
  variant?: "primary" | "outline" | "ghost";
  target?: string;
  rel?: string;
  class?: string;
}

const {
  href,
  type = "button",
  variant = "primary",
  target,
  rel,
  class: className = ""
} = Astro.props;

const classes = `btn btn-${variant} ${className}`.trim();
---

{href ? (
  <a href={href} class={classes} target={target} rel={rel}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
