---
interface Item {
  label: string;
  href?: string;
}

interface Props {
  items: Item[];
}

const { items } = Astro.props;
---

<nav class="breadcrumb" aria-label="Breadcrumb">
  <ol class="breadcrumb__list">
    {items.map((item) => (
      <li class="breadcrumb__item">
        {item.href ? <a href={item.href}>{item.label}</a> : <span aria-current="page">{item.label}</span>}
      </li>
    ))}
  </ol>
</nav>
